<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="hmm" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:fontFamily">@font/block_berthold_condensed_regular</item>
    </style>
    <style name="grr" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/block_berthold_condensed_regular</item>
    </style>

    <style name="toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>

    </style>



</resources>
